pipeline {
    agent any // Use the Jenkins agent with Maven installed globally

    tools {
        maven 'mv' // Use the Maven version configured in Jenkins global tool settings
        jdk 'jdk-11'        // Specify the JDK if configured in Jenkins global tool settings
    }

    stages {
        stage('Build') {
            steps {
                // Build the application using Jenkins-provided Maven
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                // Run tests
                sh 'mvn test'
            }
            post {
                always {
                    // Publish test results
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                // Execute delivery script
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}

